# tell Perl that it's a Mojolicious Lite-App
use Mojolicious::Lite;

# create a route
get '/' => sub {
    shift->render('hello');
    };

# add_type(first_alias => ['fname', 'lname']);
get '/:fname/:lname' => sub {
    shift->render('capture');
    };

app->start;

__DATA__

@@ hello.html.ep
Hello Mojo!

@@ capture.html.ep
Hello <%= param('fname') %> <%= param('lname') %>!
